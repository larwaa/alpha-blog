<h2 class="offset-2"><%= @company.name %></h2>
<div class="row">
  <div class="col-4 offset-4" style="text-align: center">
	This is the company's main page.
	<%= link_to "Create new event", new_event_path, class: "btn btn-outline-primary" %>
  </div>
</div>
<hr>
<h4 class="offset-2 col-8"><%= @company.name %>'s events</h4>
<br>
<% if has_events? %>
  <% @events.each do |event| %>
	  <%= render "events/event", event: event %>
  <% end %>
<% end %>