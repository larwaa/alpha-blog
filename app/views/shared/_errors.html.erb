<% if obj.errors.any? %>
  <div class="row">
    <div class="col-12">
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">
          <%= pluralize(obj.errors.count, "error") %>
          prohibited this company from being saved:
        </h4>
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>