<%= render "shared/errors", obj: user %>

<div class="col-8 offset-2">
  <% if user.new_record? %>
	<div class="form-group row">
	  <div class="col-2">
		<%= f.label :username, class: "col-form-label" %>
	  </div>
	  <div class="col-10">
		<%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
	  </div>
	</div>
  <% end %>
  <div class="form-group row">
	<div class="col-2">
	  <%= f.label :email, class: "col-form-label" %>
	</div>
	<div class="col-10">
	  <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
	</div>
  </div>
  <div class="form-group row">
	<div class="col-2">
	  <%= f.label :password, class: "col-form-label" %>
	</div>
	<div class="col-10">
	  <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
	</div>
  </div>
  <% if admin_namespace? %>
	<div class="form-group row">
	  <div class="col-2 col-form-label col-form-label">
		<%= f.label :admin, class: "col-2 col-form-label col-form-label" %>
	  </div>
	  <div class="col-10">
		<%= f.check_box :admin %>
	  </div>
	</div>
  <% end %>
  <div class="form-group row">
	<div class="col-auto mr-auto">
	  <%= f.submit(user.new_record? ? "Register" : "Update user", class: "btn btn-primary") %>
	</div>
	<div class="col-auto">
	  <%= link_to "Cancel", articles_path, class:"btn btn-outline-danger" %>
	</div>
  </div>
</div>
