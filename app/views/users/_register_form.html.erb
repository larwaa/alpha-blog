<div class="form-group row">
  <div class="col-2 col-form-label col-form-label">
    <%= f.label :username, class: "col-2 col-form-label col-form-label" %>
  </div>
  <div class="col-10">
    <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
  </div>
</div>
<div class="form-group row">
  <div class="col-2 col-form-label col-form-label">
    <%= f.label :email, class: "col-2 col-form-label col-form-label" %>
  </div>
  <div class="col-10">
    <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-2 col-form-label col-form-label">
    <%= f.label :password, class: "col-2 col-form-label col-form-label" %>
  </div>
  <div class="col-10">
    <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-auto mr-auto offset-2">
    <%= f.submit "Register", class: "btn btn-primary" %>
  </div>
  <div class="col-auto">
    <%= link_to "Cancel", articles_path, class:"btn btn-outline-danger" %>
  </div>
</div>
