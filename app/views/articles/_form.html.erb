<%= render "shared/errors", obj: @article %>
<div class="form-group row">
  <div class="col-2 col-form-label col-form-label">
    <%= f.label :title, class: "col-2 col-form-label col-form-label" %>
  </div>
  <div class="col-10">
    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
  </div>
</div>
<div class="form-group row">
  <div class="col-2 col-form-label col-form-label">
    <%= f.label :description, class: "col-2 col-form-label col-form-label" %>
  </div>
  <div class="col-10">
    <%= f.text_area :description, rows:10, class: "form-control", placeholder: "Description" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-auto mr-auto offset-2">
	<%= f.hidden_field :user, value: current_user %>
	<%= f.submit class: "btn btn-primary" %>
  </div>
  <div class="col-auto">
    <%= link_to "Cancel", articles_path, class:"btn btn-outline-danger" %>
  </div>
</div>
