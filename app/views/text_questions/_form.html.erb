<%= render "shared/errors", obj: text_question %>

<div class="col-8 offset-2">
  <div class="form-group row">
	<div class="col-2">
	  <%= f.label :question, class: "col-form-label" %>
	</div>
	<div class="col-10">
	  <%= f.text_field :question, class: "form-control", placeholder: "Enter question", autofocus: true %>
	</div>
  </div>
  <div class="form-group row">
	<div class="col-2">
	  <%= f.label :tooltip, class: "col-form-label" %>
	</div>
	<div class="col-10">
	  <%= f.text_field :tooltip, class: "form-control", placeholder: "Enter tooltip" %>
	</div>
  </div>
  <div class="form-group row">
	<div class="col-auto mr-auto">
	  <%= f.submit class: "btn btn-primary" %>
	</div>
	<p id="<% obj.id %>" style="display:none">Saved</p>
	<div class="col-auto">
	  <%= link_to "Cancel", text_questions_path, class:"btn btn-outline-danger" %>
	</div>
  </div>
</div>
