<div class="form-group row">
  <div class="col-2">
	<%= f.label :answer, class: "col-form-label"%>
  </div>
  <div class="col-10">
	<%= f.text_field :answer, class: "form-control", placeholder: "Enter answer", data: { toggle: "tooltip", placement: "right" }, title: "#{obj.tooltip} #{ obj.locked ? " Locked, cannot be changed." : nil }", readonly: obj.locked?, id: obj.id, style: "border:" %>
  </div>
</div>
<% unless obj.locked? %>
  <div class="form-group row mt-2">
	<div class="col-auto mr-auto">
	  <%= f.submit "Save", class: "btn btn-primary btn-sm" %>
	</div>
	<div id="saved<%= obj.id %>" style="display: none; color:darkgreen">
	  Saved
	</div>
	<div class="col-auto">
	  <%= link_to "Cancel", text_questions_path, class:"btn btn-outline-danger btn-sm"%>
	</div>
  </div>
<% end %>