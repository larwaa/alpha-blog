<div class="col-8 offset-2">
  <div class="form-group row">
	<div class="col-2">
	  <%= f.label :question, class: "col-form-label" %>
	</div>
	<div class="col-10">
	  <%= f.text_area :question, class: "form-control", placeholder: "Enter question", autofocus: true %>
	</div>
  </div>
  <div class="form-group row">
	<div class="col-2">
	  <%= f.label :tooltip, class: "col-form-label" %>
	</div>
	<div class="col-10">
	  <%= f.text_area :tooltip, class: "form-control", placeholder: "Enter tooltip" %>
	</div>
  </div>
  <div class="form-group row">
	<div class="col-2">
	  <%= f.label :rows, class: "col-form-label" %>
	</div>
	<div class="col-10">
	  <%= f.text_field :rows, class: "form-control", placeholder: "Enter number of rows" %>
	</div>
  </div>
  <div class="form-group row">
	<div class="col-2">
	  <%= f.label :locked, class: "col-form-label" %>
	</div>
	<div class="col-10">
	  <%= f.check_box :locked %>
	</div>
  </div>
  <div class="form-group row">
	<div class="col-auto mr-auto">
	  <%= f.submit class: "btn btn-primary" %>
	</div>
	<div class="col-auto">
	  <%= link_to "Cancel", admin_text_questions_path, class:"btn btn-outline-danger" %>
	</div>
  </div>
</div>
